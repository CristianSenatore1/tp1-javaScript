function calculadora(num1, num2, op) {
  switch (op) {
    case "+":
      return num1 + num2;
    case "-":
      return num1 - num2;
    case "*":
      return num1 * num2;
    case "/":
      return num1 / num2;
    default:
      return "Opcion no valida";
  }
}

/* console.log(calculadora(3,6,"+"));
console.log(calculadora(3,6,"-"));
console.log(calculadora(3,6,"*"));
console.log(calculadora(3,6,"/"));

 */
